<% if object.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header.other',
            :model => object.class.model_name.human, :count => object.errors.count) %></h2>
      <ul>
        <% object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>