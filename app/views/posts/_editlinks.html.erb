<% if user_signed_in? %>

    <% if current_user.subscribed_to?(post) %>
        <%= link_to t('.unsubscribe_from_comments'), current_user.subscription_for(post), method: :delete %>
    <% else %>
        <%= link_to t('.subscribe_to_comments'), post_subscriptions_posts_path(post), method: :post %>
    <% end %>

    <% if current_user.owner_of?(post) %>
        <%= link_with_icon 'pencil-square-o', edit_post_path(post) %>
        <%= link_to t('common.edit'), edit_post_path(post) %> |
        <%= link_to t('common.delete'), post, method: :delete, data: { confirm: t('common.confirm') } %> |
        <%if post.approved? %>
            <%= link_to t('.move_to_drafts'), unpublish_post_path(post.id), method: :patch %>
        <% elsif post.draft? %>
            <%= link_to t('.send_for_moderation'), publish_post_path(post.id), method: :patch %>
        <% end %>
    <% end %>

<% end %>

