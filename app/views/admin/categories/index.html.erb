<h1><%= t('.list') %></h1>

<div class="container col-md-6">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th><%= t('activerecord.attributes.category.name') %></th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to t('common.edit'), edit_admin_category_path(category) %></td>
            <td><%= link_to t('common.delete'), [:admin, category], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <hr>

    <%= link_to t('.new'), new_admin_category_path %>

</div>


