<h1>Список категорий</h1>

<div class="container col-md-6">
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>Название</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to 'Редактировать', edit_admin_category_path(category) %></td>
            <td><%= link_to 'Удалить', [:admin, category], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <hr>

    <%= link_to 'Новая Категория', new_admin_category_path %>

</div>


